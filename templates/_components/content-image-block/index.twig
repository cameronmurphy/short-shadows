<section id="content-image-block-{{ props.id }}" class="content-image-block container-fluid">
  <div class="row">
    <div class="content-col col-12 col-md-6{% if props.imagePosition == 'left' %} order-md-1{% endif %}">
      <div class="row">
        <div class="col">
          <h2 class="h3">{{ props.heading }}</h2>
          <h3 class="h5">{{ props.subheading }}</h3>
        </div>
      </div>
      <div class="row">
        <div class="col-12 col-sm-10 offset-sm-1">
          <p>{{ props.body|nl2br }}</p>
        </div>
      </div>
    </div>
    <div class="image-col col-12 col-md-6">
      <img src="{{ props.image.one.url }}" />
    </div>
  </div>
</section>
