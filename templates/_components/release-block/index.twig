<div class="container-fluid release-block">
  <div class="row">
    <div class="col-12 col-md-6 image-col{{ props.imagePosition.value == 'right' ? ' order-md-2' : '' }}">
      {% if props.imageLink %}
      <a href="{{ props.imageLink }}" target="_blank">
      {% endif %}
        <img src="{{ props.cover.one.getUrl('releaseCover') }}" alt="{{ props.releaseTitle }} cover art" />
      {% if props.imageLink %}
      </a>
      {% endif %}
    </div>
    <div class="col-12 col-md-6 info-col{{ props.dittoMusicLink ? ' ditto-link' : null }}">
      <h2 class="h3 title">{{ props.releaseTitle }}</h2>
      <div class="row link-row">
        {% if props.dittoMusicLink %}
          <div class="col-6 link-col" title="Listen on Ditto Music">
            <a href="{{ props.dittoMusicLink }}" target="_blank">
              <img src="{{ rev('/static/img/listen-on-ditto-music.png') }}" alt="Listen on Ditto Music" />
            </a>
          </div>
        {% endif %}

        {% if props.spotifyLink %}
          <div class="col-6 link-col" title="Listen on Spotify">
            <a href="{{ props.spotifyLink }}" target="_blank">
              <img src="{{ rev('/static/img/listen-on-spotify-logo.png') }}" alt="Listen on Spotify" />
            </a>
          </div>
        {% endif %}

        {% if props.appleMusicLink %}
          <div class="col-6 link-col" title="Listen on Apple Music">
            <a href="{{ props.appleMusicLink }}" target="_blank">
              <img src="{{ rev('/static/img/listen-on-apple-music-logo.png') }}" alt="Listen on Apple Music" />
            </a>
          </div>
        {% endif %}

        {% if props.youTubeMusicLink %}
          <div class="col-6 link-col" title="Listen on YouTube Music">
            <a href="{{ props.youTubeMusicLink }}" target="_blank">
              <img src="{{ rev('/static/img/listen-on-youtube-music-logo.png') }}" alt="Listen on YouTube Music" />
            </a>
          </div>
        {% endif %}

        {% if props.tidalLink %}
          <div class="col-6 link-col" title="Listen on Tidal">
            <a href="{{ props.tidalLink }}" target="_blank">
              <img src="{{ rev('/static/img/listen-on-tidal-logo.png') }}" alt="Listen on Tidal" />
            </a>
          </div>
        {% endif %}

        {% if props.amazonMusicLink %}
          <div class="col-6 link-col" title="Listen on Amazon Music">
            <a href="{{ props.amazonMusicLink }}" target="_blank">
              <img src="{{ rev('/static/img/available-on-amazon-music-logo.png') }}" alt="Listen on Amazon Music" />
            </a>
          </div>
        {% endif %}

        {% if props.deezerLink %}
          <div class="col-6 link-col" title="Listen on Deezer">
            <a href="{{ props.deezerLink }}" target="_blank">
              <img src="{{ rev('/static/img/listen-on-deezer-logo.png') }}" alt="Listen on Deezer" />
            </a>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>
